<header>
        <% logo = image_tag("header-logo.png", :alt => "SBIC", :class => "round") %>
        <%= link_to logo, root_path %>
        <nav class="round">
          <ul>
            <li><%= link_to "Home", root_path %>|</li>
            <li><%= link_to "Enquiry", enquiry_path %>|</li>
            <li><%= link_to "Record Species", recordSpecies_path %>|</li>
            <% if signed_in? %>
            <li><%= link_to "Recorded Species List", records_path %>|</li>    
            <% end %>       
            <li><%= link_to "Services and Support", service_path %>|</li>
            <li><%= link_to "About Us", about_path %>|</li>
            <li><%= link_to "Contact Us", contact_path %>|</li>
            <% if signed_in? %>
            <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
            <% else %>
            <li><%= link_to "Admin Login", signin_path %></li>
            <% end %>
          </ul>
        </nav>
</header>

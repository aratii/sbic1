<h1>Record Species</h1>

<%= form_for(@record) do |f| %>
<%= render 'shared/error_messages', :object => f.object %>

 <table>
   <tr>
    <td><%= f.label :name, "Species Name*" %></td>
    <td><%= f.text_field :name %></td>
   </tr>
   <tr>
    <td><%= f.label :sex, "Sex/Stage/State" %></td>
    <td><%= f.text_field :sex %></td>
   </tr>
   <tr>
    <td><%= f.label :quantity %></td>
    <td><%= f.text_field :quantity %></td>
   </tr>
   <tr>
    <td><%= f.label :location, "Location*" %></td>
    <td><%= f.text_field :location %></td>
   </tr>
   <tr>
    <td><%= f.label :gridRef, "Grid Reference*" %></td>
    <td><%= f.text_field :gridRef %></td>
   </tr>
   <tr>
    <td><%= f.label :recorder, "Recorder*" %></td>
    <td><%= f.text_field :recorder %></td>
   </tr>
   <tr>
    <td><%= f.label :date %></td>
    <td><%= f.date_select :date %></td>
   </tr>
   <tr>
    <td><%= f.label :reference %></td>
    <td><%= f.text_field :reference %></td>
   </tr>
   <tr>
    <td><%= f.label :comment %></td>
    <td><%= f.text_area :comment %></td>
   </tr>
   <tr><td></td>
   <div class="actions">
    <td><%= f.submit "Record Species" %></td>
   </div>
   </tr>
   
</table>
<% end %>




